#!/bin/bash

[ "$UID" -eq 0 ] || exec sudo bash "$0" "$@"

# Change to the path this script is located at
cd "`dirname \"$0\"`"

# Header
echo "Updating container scripts..."

# Stop running containers
./stop

echo "Fetching new updates from repository..."
git fetch

echo "Checking out latest version..."
git checkout origin/master

echo "Running installation..."
./install

cd -
echo "Use the './start' command to start the updated container."
echo "Update done."

